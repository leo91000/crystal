{
  "name": "@graphile/pg-adapters",
  "version": "0.0.1-beta.1",
  "description": "PostgreSQL adapters for Graphile projects",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./node-postgres": {
      "types": "./dist/adaptors/node-postgres.d.ts",
      "node": "./dist/adaptors/node-postgres.js",
      "default": "./dist/adaptors/node-postgres.js"
    },
    "./postgres": {
      "types": "./dist/adaptors/postgres.d.ts",
      "node": "./dist/adaptors/postgres.js",
      "default": "./dist/adaptors/postgres.js"
    },
    "./pglite": {
      "types": "./dist/adaptors/pglite.d.ts",
      "node": "./dist/adaptors/pglite.js",
      "default": "./dist/adaptors/pglite.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc --noEmit",
    "prepack": "tsc -b",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graphile/crystal.git"
  },
  "keywords": [
    "graphile",
    "postgresql",
    "postgres",
    "pg",
    "adapter",
    "database",
    "connection"
  ],
  "author": "Benjie Gillam <code@benjiegillam.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/graphile/crystal/issues"
  },
  "homepage": "https://grafast.org/",
  "dependencies": {
    "@graphile/lru": "workspace:^",
    "debug": "^4.4.1",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "@electric-sql/pglite": "^0.3.0",
    "pg": "^8.7.1",
    "postgres": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@electric-sql/pglite": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "postgres": {
      "optional": true
    }
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.6",
    "@types/node": "^22.16.3",
    "@types/pg": "^8.15.4",
    "jest": "^30.0.4",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.17"
  }
}
